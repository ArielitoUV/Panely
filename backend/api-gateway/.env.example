PORT=8080
NODE_ENV=development
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# =============================================================================
# CONFIGURACIÓN DE SERVICIOS
# =============================================================================
AUTH_SERVICE_URL=http://localhost:3001
USER_SERVICE_URL=http://localhost:3002

# URL de la aplicación frontend
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

LOG_LEVEL=info
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# =============================================================================
# EJEMPLOS PARA PRODUCCIÓN (descomenta y modifica para producción)
# =============================================================================
# Secreto JWT para producción (genera un secreto fuerte)
# JWT_SECRET=your-production-jwt-secret-256-bits-minimum

# AUTH_SERVICE_URL=https://auth.your-domain.com
# USER_SERVICE_URL=https://users.your-domain.com

# CORS en producción (restringe a tu dominio del frontend)
# CORS_ORIGIN=https://your-frontend-domain.com

# Registro en producción
# LOG_LEVEL=warn
